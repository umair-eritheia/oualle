%footer#main-footer
  .container
    .row.row-wrap
      .col-md-3
        = link_to root_path, class:'footer-logo' do
          = image_tag "logo-invert.png"
        %p.mb20 Booking, reviews and advices on hotels, resorts and lots more!
        %ul.list.list-horizontal.list-space
          %li
            %a.fa.fa-facebook.box-icon-normal.round.animate-icon-bottom-to-top{:href => "#"}
          %li
            = link_to '', "https://www.twitter.com/oualle_travel", class: 'fa fa-twitter box-icon-normal round animate-icon-bottom-to-top', target: '_blank'
          %li
            %a.fa.fa-linkedin.box-icon-normal.round.animate-icon-bottom-to-top{:href => "#"}
          %li
            = link_to '', "https://www.pinterest.com/tripscrave4895", class: 'fa fa-pinterest box-icon-normal round animate-icon-bottom-to-top', target: '_blank'
      .col-md-7
      .col-md-2
        %ul.list.list-footer
          %li
            = link_to 'About US', about_us_path
          %li
            = link_to 'Contact US', contact_us_path
          %li
            = link_to 'Privacy Policy', privacy_policy_path
          %li
            = link_to 'Terms of Use', terms_of_service_path
        
