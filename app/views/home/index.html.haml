.top-area.show-onload
  .bg-holder.full
    .bg-front.bg-front-mob-rel
      .container
        .search-tabs.search-tabs-bg.search-tabs-abs.mt50
          %h1 Find Your Perfect Trip
          .tabbable
            %ul#myTab.nav.nav-tabs
              %li.active
                %a{"data-toggle" => "tab", :href => "#tab-1"}
                  %i.fa.fa-building-o
                  %span Hotels
              / %li
              /   %a{"data-toggle" => "tab", :href => "#tab-2"}
              /     %i.fa.fa-plane
              /     %span Flights
              / %li
              /   %a{"data-toggle" => "tab", :href => "#tab-3"}
              /     %i.fa.fa-home
              /     %span Rentals
              / %li
              /   %a{"data-toggle" => "tab", :href => "#tab-4"}
              /     %i.fa.fa-car
              /     %span Cars
              / %li
              /   %a{"data-toggle" => "tab", :href => "#tab-5"}
              /     %i.fa.fa-bolt
              /     %span Activities
            .tab-content
              #tab-1.tab-pane.fade.in.active
                %h2 Search and Save on Hotels
                = form_tag search_path, method: 'get', class: 'form' do
                  .form-group.form-group-lg.form-group-icon-left
                    %i.fa.fa-map-marker.input-icon
                    %label Where are you going?
                    = text_field_tag 'destinationString', '', class: 'typeahead form-control', placeholder: "City, Airport, Point of Interest or U.S. Zip Code"

                  .input-daterange{"data-date-format" => "D, M d yyyy"}
                    .row
                      .col-md-3
                        .form-group.form-group-lg.form-group-icon-left
                          %i.fa.fa-calendar.input-icon.input-icon-highlight
                          %label Check-in
                          = text_field_tag 'arrivalDate', '', class: 'form-control'
                      .col-md-3
                        .form-group.form-group-lg.form-group-icon-left
                          %i.fa.fa-calendar.input-icon.input-icon-highlight
                          %label Check-out
                          = text_field_tag 'departureDate', '', class: 'form-control'
                      .col-md-3
                        .form-group.form-group-lg.form-group-select-plus
                          %label Rooms
                          .btn-group.btn-group-select-num{"data-toggle" => "buttons"}
                            %label.btn.btn-primary.active
                              = radio_button_tag 'nr_rooms', '1', true
                              1
                            %label.btn.btn-primary
                              = radio_button_tag 'nr_rooms', '2', false
                              2
                            %label.btn.btn-primary
                              = radio_button_tag 'nr_rooms', '3', false
                              3
                            %label.btn.btn-primary
                              = radio_button_tag 'nr_rooms', '', false
                              3+
                          = select_tag 'nr_rooms',"<option disabled selected value> -- select rooms -- </option><option>1</option><option>1</option><option value=2>2</option><option value=3>3</option><option value=4>4</option><option value=5>5</option><option value=6>6</option><option value=7>7</option><option value=8>8</option>".html_safe, class: 'form-control hidden'
                          
                      .col-md-3
                        .form-group.form-group-lg.form-group-select-plus
                          %label Guests
                          .btn-group.btn-group-select-num{"data-toggle" => "buttons"}
                            %label.btn.btn-primary.active
                              = radio_button_tag 'nr_guests', '1', true
                              1
                            %label.btn.btn-primary
                              = radio_button_tag 'nr_guests', '2', true
                              2
                            %label.btn.btn-primary
                              = radio_button_tag 'nr_guests', '3', true
                              3
                            %label.btn.btn-primary
                              = radio_button_tag 'nr_guests', '', true
                              3+
                          = select_tag 'nr_guests',"<option disabled selected value> -- select guests -- </option><option value=1>1</option><option value=2>2</option><option value=3>3</option><option value=4>4</option><option value=5>5</option><option value=6>6</option><option value=7>7</option><option value=8>8</option>".html_safe, class: 'form-control hidden'
                          
                  = submit_tag 'Search for Hotels', class: 'btn btn-primary btn-lg'
